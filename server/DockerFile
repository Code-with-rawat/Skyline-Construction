# Use official PHP 8.2 with FPM
FROM php:8.2-fpm

# Install system dependencies and PHP extensions
RUN apt-get update && apt-get install -y \
    git curl unzip libpng-dev libjpeg-dev libfreetype6-dev libzip-dev zip libonig-dev libxml2-dev libicu-dev g++ \
    && docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install pdo pdo_mysql mbstring zip bcmath gd intl

# Set working directory
WORKDIR /var/www/html

# Copy all project files into container
COPY . .

# Install Composer and PHP dependencies
RUN curl -sS https://getcomposer.org/installer | php \
    && php composer.phar install --no-dev --optimize-autoloader

# Set correct permissions for storage and cache
RUN chown -R www-data:www-data /var/www/html/storage /var/www/html/bootstrap/cache

# Clear caches and run migrations (safe if DB not ready yet)
RUN php artisan config:clear || true
RUN php artisan key:generate --force || true
RUN php artisan migrate --force || true

# ✅ Expose default port
EXPOSE 10000

# ✅ Run Laravel on either given PORT or default 10000
CMD ["sh", "-c", "php artisan serve --host=0.0.0.0 --port=${PORT:-10000}"]
